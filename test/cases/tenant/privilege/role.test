create role r1,r2,r3;
create user u1 identified by '111', u2 identified by '111', u3 identified by '111';
grant r1 to u1;
grant r1,r2,r3 to u1,u2,u2;
grant r1 to r2;
grant r2 to r3;
grant r3 to r1;
revoke r2 from r3;
revoke r1 from r2;
grant show databases on account * to r1;
grant show databases on database * to r1;
grant show tables on database * to r1;
grant create database on account * to r1;
grant create table on database * to r1;
drop database if exists t;
create database t ;
use t;
create table A (a int);
grant select,insert,delete,update on table t.a to r1;
drop database if exists t;